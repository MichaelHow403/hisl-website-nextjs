{
  "name": "hisl-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbo",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "images:process": "node scripts/process-images.mjs",
    "images:manifest": "node scripts/generate-imagery-manifest.mjs",
    "images:all": "npm run images:process && npm run images:manifest",
    "prepare": "husky"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.8.0",
    "next": "15.5.0",
    "posthog-js": "^1.265.0",
    "posthog-node": "^5.8.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "contentlayer2": "^0.5.8",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "framer-motion": "^11.18.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "lucide-react": "^0.544.0",
    "next-contentlayer2": "^0.5.8",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^4",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,html,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
